@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="zh" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="zh" class="ie9"> <![endif]-->
<!--[if !IE]><!-->
<html lang="zh">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    @Html.Partial("_Title")
    @Html.Raw(ViewBag.CssFile)
</head>
<body class="fixed-top">
    @Html.Partial("_Top")
    <div id="container" class="row-fluid @ViewBag.MenuStatus">
        @Html.Partial("_LeftMenu")
        <div id="body">
            <div id="widget-config" class="modal hide">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close" type="button"></button>
                    <h3>widget Settings</h3>
                </div>
                <div class="modal-body">
                    <p>Here will be a configuration form</p>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span12">
                        @Html.Raw(ViewBag.NavMenu)
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="widget box light-grey">
                            <div class="widget-title">
                                <h4><i class="icon-globe"></i>新增出库单</h4>
                                <div class="tools">
                                    <a href="javascript:;" class="collapse"></a>
                                    <a href="#widget-config" data-toggle="modal" class="config"></a>
                                    <a href="javascript:;" class="reload"></a>
                                    <a href="javascript:;" class="remove"></a>
                                </div>
                            </div>
                            <div class="widget-body">
                                <div class="row-fluid" style="border: 1px solid #DDDDDD;">
                                    <div class="widget-body form">
                                        <form class="horizontal-form">
                                            <div class="row-fluid">
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtOrderNum">出库单编号</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtOrderNum" name="txtOrderNum" class="span12" placeholder="可不填,自动生成" disabled="disabled">
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="ddlOutType">出库单类型</label>
                                                        <div class="controls">
                                                            <select id="ddlOutType" name="ddlOutType" class="span12">
                                                                <option value="2">销售提货出库</option>
                                                            </select>
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                @*<div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtContractOrder">关联订单号</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtContractOrder" name="txtContractOrder" class="span12" placeholder="">
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>*@
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtOrderTime">发货日期 </label>
                                                        <div class="controls">
                                                            <input type="text" id="txtOrderTime" name="txtOrderTime" class="span12" placeholder="默认是出库时间" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd:HH:mm:ss' })">
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtCusNum">客户编号</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtCusNum" name="txtCusNum" class="span12" placeholder="输入关键字搜索或者双击选择" />
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtCusName">客户名称</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtCusName" name="txtCusName" class="span12" placeholder="">
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtAddress">客户地址</label>
                                                        <div class="controls">
                                                            <select id="ddlAddress" name="ddlAddress" class="span12" onchange="orderProduct.AddressChange()"></select>
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <!--control-group error-->
                                                        <label class="control-label" for="txtCusPhone">客户联系方式</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtCusPhone" name="txtCusPhone" class="span12" placeholder="">
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row-fluid">
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtContactName">联系人</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtContactName" name="txtContactName" class="span12" placeholder="" />
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtPayWay">支付方式</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtPayWay" name="txtPayWay" class="span12" placeholder="" />
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtCrateUser">制单人</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtCrateUser" name="txtCrateUser" class="span12" placeholder="" value="@ViewBag.CraterUser" />
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtTimeMainTain">维护期限</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtTimeMainTain" name="txtTimeMainTain" class="span12" placeholder="" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd'})"/>
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtProtectedWay">维护次数</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtProtectedWaySecond" name="txtProtectedSecond" class="span12" placeholder="" value="1" />
                                                            <select name="UnitProtected" id="UnitProtected" class="span12">
                                                                <option value="年">年</option>
                                                                <option value="月" selected="selected">月</option>
                                                                <option value="周">周</option>
                                                            </select>
                                                            <input type="text" id="txtProtectedLSecond" name="txtProtectedLSecond" class="span12" placeholder="" value="1" />
                                                            次
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <div class="control-group">
                                                        <label class="control-label" for="txtRemark">备注</label>
                                                        <div class="controls">
                                                            <input type="text" id="txtRemark" name="txtRemark" class="span12" placeholder="" />
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="span3">
                                                    <input type="checkbox" id="txtIsSettlement" name="txtIsSettlement" />&nbsp; 已结算
                                                </div>
                                                @*<div class="span3">
                                                    <input type="checkbox" id="txtIsSettlement" name="txtIsSettlement" />&nbsp; 已结算
                                                </div>*@
                                                <div class="span3 invisible">
                                                    <div class="control-group">
                                                        <label class="control-label" for="ddlProductType">出库产品类型</label>
                                                        <div class="controls">
                                                            <select id="ddlProductType" name="ddlProductType" class="span12" disabled="disabled">
                                                                @Html.Raw(ViewBag.ProductType)
                                                            </select>
                                                            <span class="help-block"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <br />
                                <table class="table table-striped table-bordered table-hover" id="tabInfo">
                                    <thead>
                                        <tr class="widget-title">
                                            <th class="hidden-480">产品名称</th>
                                            <th class="hidden-480">产品条码</th>
                                            <th class="hidden-480">产品编号</th>
                                            <th class="hidden-480">批次</th>
                                            <th class="hidden-480">单价</th>
                                            <th class="hidden-480">总价</th>
                                            <th class="hidden-480">规格</th>
                                            <th class="hidden-480">出库数</th>
                                            <th class="hidden-480">库位</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>

                                <div class="form-actions formBtn">
                                    @*<button type="button" class="btn btn-primary" onclick="orderProduct.SelectOrder()"><i class="icon-plus"></i>订单出货</button>*@
                                    <button type="button" class="btn btn-primary" onclick="orderProduct.SselectDialog()"><i class="icon-plus"></i>新增产品</button>
                                    <button type="button" class="btn btn-primary" onclick="orderProduct.Add()"><i class="icon-ok"></i>保存</button>
                                    <button type="button" class="btn" onclick="orderProduct.Cancel()">取消</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Foot")

    <script type="text/javascript">
        $(document).ready(function () {
            orderProduct.Load();
            orderProduct.LoadSDetail();
        });
    </script>
</body>

</html>
